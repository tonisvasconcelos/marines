# Backend Environment Variables
# Copy this file to .env for local development

# Server Configuration
PORT=3001

# Frontend URL (for CORS)
# Local: http://localhost:3000
# Production: https://yourdomain.com or https://your-app.vercel.app
FRONTEND_URL=http://localhost:3000

# JWT Secret (REQUIRED - use a strong random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=dev-secret-key-change-in-production

# Database URL (PostgreSQL)
# Format: postgresql://user:password@host:port/database
# Examples:
#   - Neon: postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/dbname
#   - Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
#   - Railway: postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway
DATABASE_URL=postgresql://user:password@localhost:5432/marinesapp

# AIS API Configuration
# Replace with your actual AIS provider API key
AIS_API_KEY=your_ais_api_key_here
AIS_API_URL=https://api.ais-provider.com

# Multi-Tenant Configuration
# APP_BASE_URL is used for generating tenant-specific URLs
# Local: http://localhost:3000
# Production: https://yourdomain.com
APP_BASE_URL=http://localhost:3000

# Optional: Node Environment
# NODE_ENV=development
